@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blogs</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo-block">
            <a href="/Home/"></a>
            <div class="logo">
                <a href="/Home/">404</a>
            </div>
            <a id="logo-name" href="">Undefined</a>
        </div>
        <nav>
            <ul>
                <li>
                    <a  id="nav-elem" asp-action="Index" asp-controller="Blogs">Blogs</a>
                </li>
                @if(User.Identity.IsAuthenticated)
                {
                    <li>
                        <a id="nav-elem" asp-action="CreateBlog" asp-controller="Blogs">Create blog</a>
                    </li>
                }
            </ul>
        </nav>
        <partial name="_LoginPartial.cshtml"/>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;  @DateTime.Now.Year - Blogs 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
